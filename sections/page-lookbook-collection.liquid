
<section class="lookbook-items-section">
  <div class="container-fluid p-0">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mx-md-n1 lookbook-items lookbook-thirds"
      id="loobBookPageLayout">
      {% if section.blocks %}
        {% for block in section.blocks %}
          <div class="col lookbook-item-container p-1">
            <div class="lookbook-item" style="background-image: url('{{ block.settings.lookbook_image | img_url: 'master'  }}')">
              <a href="{{ block.settings.link }}" class="black-overlay">
                <span>{{ block.settings.lookbook_title }}</span>
              </a>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lookbook Items",
  "settings": [
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Lookbook item",
      "settings": [
        {
          "type": "image_picker",
          "id": "lookbook_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "lookbook_title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}
