
<section id="collection-products" class="container">
  {% paginate collection.products by 12 %}
    {% if collection.products.size > 0 %}
      <div class="collection-products row mb-5">
        {% for product in collection.products %}
          <div class="col-lg-4 mb-5 mb-lg-0">
            {% include 'collection-product' %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="row py-3">
        <div class="col text-center">
          <p>No products found. Click <a href="{{ shop.url }}" title="Continue Shopping">here</a> to continue shopping.</p>
        </div>
      </div>
    {% endif %}
    {% if paginate.pages > 1 %}
      {% include 'load-more' %}
    {% endif %}
  {% endpaginate %}
</section>
