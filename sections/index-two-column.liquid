      "type": "url",
      "id": "left_link",
      "label": "Left Column Link"
    },
    {
      "type": "text",
      "id": "left_link_label",
      "label": "Left Column Link Label"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Column Image"
    },
    {
      "type": "url",
      "id": "right_link",
      "label": "Right Column Link"
    },
    {
      "type": "text",
      "id": "right_link_label",
      "label": "Right Column Link Label"
    }
  ],
  "presets": [
    {
      "name": "Two Column",	
      "category": "Layout"
    }
  ]
}
{% endschema %}