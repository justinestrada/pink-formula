
<style>
.home-full-width-container {
  position: relative;
}
.home-full-width-container::before {
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.325);
  width: 100%;
  height: 100%;
}
.home-full-width-container > div {
  display: flex;
  flex-direction: column;
  align-items: center;
}
</style>
<section class="home-full-width-container cta-container d-flex flex-column justify-content-center align-items-center text-white text-center" style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}')">
  <div style="position: relative;">
    <h2 class="pb-4 font-weight-normal">{{ section.settings.title }}</h2>
    <div class="body-large pb-4">{{ section.settings.description }}</div>
    <a href="{{ section.settings.call_to_action }}" title="{{ section.settings.call_to_action_label }}" class="btn btn-link text-white d-flex flex-row align-items-center justify-content-center">
      <img class="mr-2" src="{{ 'subdirectory-arrow-right.svg' | asset_url }}">
      <div>{{ section.settings.call_to_action_label }}</div>
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Full Width",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "call_to_action",
      "label": "Call to Action Link"
    },
    {
      "type": "text",
      "id": "call_to_action_label",
      "label": "Call to Action Label"
    }
  ],
  "presets": [
    {
      "name": "Full Width",	
      "category": "Layout"
    }
  ]
}
{% endschema %}