

<h3 class="h1 text-center my-5">Latest release</h3>
<section class="container">
  <div class="album-list row">
    {% if section.blocks %}
      {% for block in section.blocks %}
        <div class="album-tile d-column col-12 col-sm-6 col-lg-3" href="javascript:void(0);" style="margin-top: 0;">
          <a href="#featured-music" id="set-featured-album" class="d-block">
            <img class="album-img" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}"/>
          </a>
          <div class="d-flex flex-row justify-content-between align-items-center mt-2">
            <p class="album-title">{{ block.settings.title }}</p>
            <a class="btn btn-link d-flex flex-row align-items-center" href="{{ block.settings.spotify_link }}" target="_blank">
              <img class="mr-2" src="{{ 'subdirectory-arrow-right_black.svg' | asset_url }}" alt="Right arrow" height="10px"/>
              <div>Listen on Spotify</div>
            </a>
          </div>
          <div class="album-date d-none">
            {{ block.settings.date }}
          </div>
          <div class="album-description d-none">
            {{ block.settings.description }}
          </div>
          <div class="album-embed d-none">
            {{ block.settings.embed }}
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p>No music items, yet.</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Latest Releases",
  "settings": [
  ],
  "blocks": [
    {
      "type": "album",
      "name": "Album",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "26 03 2020"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "<p class=\"body-small\">P448 MUSIC UNITY is the first compilation of a music series curated by our P448 design team. Similar to the fusion of personalities we bring to our sneaker designs, each playlist is built around the team’s combination of unique passions & music tastes.</p><p class=\"body-small\">Check out our designers’ favorite beats, curated just for you and made to lift your spirits.</p>"
        },
        {
          "type": "textarea",
          "id": "embed",
          "label": "Spotify Embed Code",
          "default": "<iframe src=\"https://open.spotify.com/embed/user/83k97cv1y9tq2rpnbqwxc8dqw/playlist/07zIJJc7CHunH3W7ibBDNv\" width=\"100%\" frameborder=\"0\" allowtransparency=\"true\" allow=\"encrypted-media\"></iframe>"
        },
        {
          "type": "url",
          "id": "spotify_link",
          "label": "Listen on Spotify Link"
        }
      ]
    }
  ]
}
{% endschema %}
