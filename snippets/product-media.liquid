
{% case media.media_type %}
  {% when 'image' %}
    <a data-lightbox="product-gallery" href="{{ media.src | img_url: 'master' }}" data-thumbnail-id="{{ media.id }}" data-product-single-thumbnail{% if featured_image == image %} aria-current="true"{% endif %} class="d-block mb-2">
      <img src="{{ media.src | img_url: 'master' }}" alt="{{ media.alt | escape }}" class="product-single__thumbnail-image w-100"/>
    </a>
  {% when 'external_video' %}
    <!-- external_video -->
    <div class="embed-responsive embed-responsive-16by9 external_video" data-media-id="{{ media.id }}">
      {{ media | external_video_tag: class: "embed-responsive-item" }}
    </div>
  {% when 'video' %}
    <!-- video -->
    <div class="video" data-media-id="{{ media.id }}">
      {{ media | video_tag: controls: true }}
    </div>
  {% when 'model' %}
    <!-- model -->
    <div class="model" data-media-id="{{ media.id }}">
      {{ media | model_viewer_tag }}
    </div>
  {% else %}
    <div class="media" data-media-id="{{ media.id }}">
      {{ media | media_tag }}
    </div>
{% endcase %}
