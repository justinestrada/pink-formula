/* RTE */
//
//
.rte {
  margin: 0;

  img {
    height: auto;
  }

  table {
    table-layout: fixed;
  }

  // ul,
  // ol {
  //   margin: 0 0 ($grid-gutter / 2) $grid-gutter;
  // }

  strong {
